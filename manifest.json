{
    "manifest_version": 3,
    "name": "Twitter4ever",
    "version": "1.0",
    "description": "Save the bird 4ever",
    "permissions": [
      "scripting",
      "activeTab"
    ],
    "action": {
      "default_popup": "popup.html"
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      },
    "content_scripts": [
      {
        "matches": ["*://twitter.com/*"],
        "js": ["script.js"]
      }
    ]
  }
  